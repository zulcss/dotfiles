#
# Container aliases
# 
elinks() {
    docker run --rm -it \
    --name elinks elinks "$@"
}

aws() {
    docker run -it --rm \
        -v "${HOME}/.aws:/root/.aws" \
        aws "$@"
}

powershell() {
    docker run -it --rm powershell "$@"
}

nmap() {
    docker run -it --rm nmap "$@"
}

firefox() {
    docker run -i -t \
		--memory 2gb \
		--net host \
		--cpuset-cpus 0 \
		-v /etc/localtime:/etc/localtime:ro \
		-v /tmp/.X11-unix:/tmp/.X11-unix \
		-v "${HOME}/.firefox/cache:/root/.cache/mozilla" \
		-v "${HOME}/.firefox/mozilla:/root/.mozilla" \
		-v "${HOME}/Downloads:/root/Downloads" \
		-v "${HOME}/Pictures:/root/Pictures" \
		-v "${HOME}/Torrents:/root/Torrents" \
		-e "DISPLAY=$DISPLAY" \
		-e GDK_SCALE \
		-e GDK_DPI_SCALE \
		--device /dev/snd \
		--device /dev/dri \
		--name firefox \
		firefox "$@"
    }

vagrant() {
    docker run -i -t --rm \
        -v "${HOME}:/root"
        vagrant "$@"
}
